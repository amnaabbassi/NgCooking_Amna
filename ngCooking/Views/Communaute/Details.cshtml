@model ngCooking.Models.IngredientCategorieRecette
@if (Model != null)
{
    <div id="wrapper">
        <main id="main">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-9">
                        <div class="content" id="content_communaute_details">
                            @foreach (var item in Model.Communaute)
                            {
                                <section class="section details">
                                    <div class="row">
                                        <div class="col-vxs-12 col-xs-6 col-sm-5">
                                            <div class="avatar-wrap">
                                                <img class="avatar" src="../../@item.picture" alt="Hetta Van Deventer">
                                            </div>
                                        </div>
                                        <div class="col-vxs-12 col-xs-6 col-sm-7">
                                            <div class="infos">
                                                <h1 class="name">@item.firstname</h1>
                                                <h1 class="surname">@item.surname</h1>
                                                <p class="level">
                                                    @for (int i = 0; i < item.niveau; i++)
                                                    {
                                                        <span class="stars">
                                                            <span class="glyphicon glyphicon-star"></span>
                                                        </span>
                                                    }

                                                    @if (@item.niveau == 1)
                                                    {
                                                        <span class="status">Novice </span>
                                                    }
                                                    else if (@item.niveau == 2)
                                                    {
                                                        <span class="status">Confirmé </span>
                                                    }
                                                    else if (@item.niveau == 3)
                                                    {
                                                        <span class="status">Expert </span>
                                                    }
                                                </p>
                                                <p class="city"><span class="fwb">Ville : </span>@item.city</p>
                                                <p class="age"><span class="fwb">Age : </span>@item.birth ans</p>
                                                <p class="shared"><span class="fwb">@item.surname</span> a partagé <span class="nb">3 recettes</span></p>
                                                <p class="bio"><span class="fwb">BIO : </span>@item.bio</p>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            }
                            <!-- Afficher le bloc ci-dessous uniquement si lutilisateur connecté se rend sur sa propre page -->
                            @if (Request.IsAuthenticated)
                            {
                                <section class="section newrecette">
                                    @Html.Partial("_New_Recette")
                                </section>
                                <section class="section">
                                    <h2 class="title">~ Les recettes de @Model.Communaute.First().firstname ~</h2>
                                    <div class="recettes row">
                                        @foreach (var item in Model.Recette)
                                        {
                                            <a href="">
                                                <div class="col-xs-6 col-sm-3 recette">
                                                    <img src="~/img/recettes/@item.picture" alt="@item.name" height="250">
                                                    <div class="top" title="note : 3,2/5">
                                                        <span class="note">
                                                            <span class="glyphicon glyphicon-heart"></span>
                                                        </span>
                                                    </div>
                                                    <div class="bot">
                                                        <p class="name">@item.name</p>

                                                    </div>
                                                </div>
                                            </a>
                                        }
                                    </div>
                                </section>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
}